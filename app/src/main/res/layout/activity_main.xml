<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.MainActivity">

    <TextView
        android:id="@+id/showDbData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/saveToDb"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="保存至数据库" />

    <Button
        android:id="@+id/queryFromDb"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="从数据库中获取全部数据" />

    <Button
        android:id="@+id/deletByconfiden"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="根据条件删除数据" />


    <Button
        android:id="@+id/updateByconfiden"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="根据条件更新数据库" />

    <Button
        android:id="@+id/oneToOne"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="一对一关系" />

    <Button
        android:id="@+id/oneToMany"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="一对多关系" />


</LinearLayout>